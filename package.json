		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"web-push": "^3.6.7",
		"winston": "^3.18.3",
		"winston-daily-rotate-file": "^5.0.0"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"drizzle-kit": "0.31.6",
