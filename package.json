{
	"name": "fzl-erp-backend",
	"version": "1.0.0",
	"main": "./src/server.js",
	"type": "module",
	"scripts": {
		"start": "bun ./src/server.js",
		"dev": "bun --watch ./src/server.js",
		"test": "bun test",
		"db-generate": "bun drizzle-kit generate",
		"db-migrate": "bun drizzle-kit migrate",
		"db-drop": "bun drizzle-kit drop",
		"db-introspect": "bun drizzle-kit introspect",
		"db-push": "bun drizzle-kit push",
		"db-studio": "bun drizzle-kit studio --port 4000",
		"deploy": "git pull && bun install && bun run db-generate && bun run db-migrate && pm2 restart fzl-backend --update-env",
		"deploy-local": "git pull && bun install && bun run db-generate && bun run db-migrate",
		"build": "echo 'No build step needed for Bun'",
		"clean": "rm -rf node_modules bun.lockb"
	},
	"author": "FZL ERP Team",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"axios": "^1.13.1",
		"bcrypt": "^6.0.0",
		"cors": "^2.8.5",
		"date-fns": "^4.1.0",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"express": "^5.1.0",
		"express-validator": "^7.2.1",
		"jsonwebtoken": "^9.0.2",
		"local-file-upload": "^1.1.2",
		"memory-cache": "^0.2.0",
		"minimist": "^1.2.8",
		"morgan": "^1.10.1",
		"multer": "^2.0.2",
		"nanoid": "^5.1.6",
		"pdfmake": "^0.2.20",
		"pg": "^8.16.3",
